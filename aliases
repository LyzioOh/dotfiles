# Quickly serve the current directory as HTTP

#shell
alias path='echo $PATH | tr : \\n'
alias p-path='echo $PATH | tr : \\n'

##
## Rails
alias  rc='rails console'
alias  bi='bundle install'
alias  r-pid='ps aux | grep puma'

## TDD

alias db:test:migrate='export RAILS_ENV=test && rake db:migrate && unset RAILS_ENV'
alias of='spring rspec --only-failures'

## Yarn and Webpack
alias yi='yarn install'
alias ys='yarn start'
alias yr='yarn run'

##
## Git command
alias  gs='git_status'
alias  gst='git stash'
alias  st-pop= 'git stash pop'
alias  gaa='git add .'
alias  gca='git commit -m "commit"
alias  gc='git commit -m'
alias  gp='git push'


# Git Set upstream and Push
alias g-sup="git push -u --no-verify origin HEAD"

#Hub
alias h-pr='hub pull-request'

#Git Push Pr and Checkmout Master
alias hub-pr-on-staging='hub pull-request -b staging'

##
## Zsh
alias  czsh='code -a ~/.zshrc'
alias  ca='code -a ~/.aliases'
alias  cfg-h='sudo code -a /etc/hosts'
alias  chosts='sudo code -a /etc/hosts'
alias  rzsh='exec zsh'
alias  pa="cat ~/code/eetancelin/dotfiles/aliases | grep 'alias \|##'"
alias  gcdf="git -C ~/eetancelin/dotfiles commit .  "
alias  gsdf="git -C ~/eetancelin/dotfiles status "
alias  gpdf="git -C ~/eetancelin/dotfiles push "

# Docker
alias dck="docker"
alias dck-c="docker-compose"

##
## Other
alias  ct='rm -r -f ~/Downloads/*'
alias 'ml-bm'='/Users/edouardetancelin/code/eetancelin/browser-bookmark-manager/dist/bin/bbm.js'

alias aws="$HOME/Library/Python/2.7/bin/aws"

